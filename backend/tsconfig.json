{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      // entities path
      "@/entities/*": ["src/entities/*"],
    }
  },
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
}
